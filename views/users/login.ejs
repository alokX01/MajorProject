<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <h1 class="col-6 offset-3 text-center mb-4">Login</h1>

  <div class="col-6 offset-3">
    <form action="/login" method="POST" class="needs-validation shadow p-4 rounded bg-light" novalidate>
      
      <div class="mb-3">
        <label for="username" class="form-label fw-bold">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label fw-bold">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          required
        />
      </div>

      <button class="btn btn-success w-100">Login</button>
    </form>
  </div>
</div>
